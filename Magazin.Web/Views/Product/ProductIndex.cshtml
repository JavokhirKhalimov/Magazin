@model IEnumerable<Magazin.Web.Models.ProductDTO>

    <br /><br />
    <div class="container p-4 border">
        
        <div class="row pb-2">
            <div class="col">
                <h1 class="text-primary">Списка Товаров</h1>
            </div>
            <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-outline-primary"><i class="fas fa-plus"></i> Создать новая продукция</a>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Название
                    </th>
                <th>
                    Название категории
                </th>
                <th>
                    Цена
                </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>
                            @item.ProductName
                        </td>
                    <td>
                        @item.ProductCategory
                    </td>
                    <td>
                        @(item.Price.ToString("G"))
                    </td>
                    <td>
                        <a asp-action="ProductEdit" class="btn btn-success" asp-route-productid="@item.ProductId">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="ProductDelete" class="btn btn-danger" asp-route-productid="@item.ProductId">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>