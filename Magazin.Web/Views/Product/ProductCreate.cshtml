@model Magazin.Web.Models.ProductDTO

<form asp-action="ProductCreate">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Создать продукция</h1>

        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="ProductName" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ProductName" class="form-control" style="font-size:25px;" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="ProductCategory" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ProductCategory" class="form-control" style="font-size:25px;  />
                <span asp-validation-for="ProductCategory" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="ProductDescription" class="control-label pt-2" style="font-size:20px;" ></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="ProductDescription" class="form-control" rows="5"></textarea>
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="IMG_URL" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="IMG_URL" class="form-control" style="font-size:25px; />
                <span asp-validation-for="IMG_URL" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Price" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="Index" class="btn-primary btn form-control">Обратно к списку</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Создать" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}